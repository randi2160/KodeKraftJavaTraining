<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">

	<listeners>
		<listener class-name="listner.MyTestNGListener"></listener>
	</listeners>

	<test name="Create Portfolio Test">
		<classes>
			<class name="testcasesrediffPortfolio.ManageSessionTest">
				<methods>
					<include name="doLogin" />
				</methods>
			</class>
			<class name="testcasesrediffPortfolio.ManagePortfolioTest">
				<methods>
					<include name="createPortfolio" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Delete Portfolio Test">
		<classes>
			<class name="testcasesrediffPortfolio.ManageSessionTest">
				<methods>
					<include name="doLogin" />
				</methods>
			</class>
			<class name="testcasesrediffPortfolio.ManagePortfolioTest">
				<methods>
					<include name="deletePortfolio" />
				</methods>
			</class>
		</classes>
	</test>

</suite> 

